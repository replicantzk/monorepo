{
  "name": "appchain",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "watch": {
    "build-and-start": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "*"
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test": "node --experimental-vm-modules --experimental-wasm-modules --experimental-wasm-threads --experimental-specifier-resolution=node ./node_modules/jest/bin/jest.js",
    "test:watch": "npm run test --watchAll",
    "build": "tsc -p tsconfig.json",
    "start:cli": "FORCE_COLOR=3 protokit start ./dist/chain.config.js",
    "start:manual": "pnpm run build && node --experimental-vm-modules --experimental-wasm-modules --experimental-wasm-threads --experimental-specifier-resolution=node ./dist/bin/run.js",
    "bench:balances": "pnpm run build && node --experimental-vm-modules --experimental-wasm-modules --experimental-wasm-threads --experimental-specifier-resolution=node ./dist/bench/balances.js",
    "build-and-start": "pnpm run build && pnpm run start:manual",
    "dev": "npm-watch build-and-start",
    "profile:cpu": "pnpm run build && 0x -o -D ./.0x/{pid}.0x -- node ./dist/bin/run.js",
    "profile:memory": "pnpm run build && node --inspect ./dist/bin/run.js"
    

  },
  "devDependencies": {
    "npm-watch": "^0.11.0",
    "@jest/globals": "^29.6.1",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "events": "^3.3.0",
    "jest": "^29.6.1",
    "jest-expect-message": "^1.1.3",
    "loglevel": "^1.8.1",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "string_decoder": "^1.3.0",
    "ts-jest": "^29.1.1",
    "typescript": "4.9.4",
    "url": "^0.11.1",
    "util": "^0.12.5"
  },
  "peerDependencies": {
    "@proto-kit/api": "file:../../vendor/protokit/packages/api",
    "@proto-kit/cli": "file:../../vendor/protokit/packages/cli",
    "@proto-kit/common": "file:../../vendor/protokit/packages/common",
    "@proto-kit/module": "file:../../vendor/protokit/packages/module",
    "@proto-kit/protocol": "file:../../vendor/protokit/packages/protocol",
    "@proto-kit/sdk": "file:../../vendor/protokit/packages/sdk",
    "@proto-kit/sequencer": "file:../../vendor/protokit/packages/sequencer",  "mina-signer": "^3.0.1",
    "o1js": "0.13.1",
    "tsyringe": "^4.7.0"
  }
}
