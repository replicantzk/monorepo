    "windows": [
      {
        "title": "Replicant Worker",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/replicantzk/monorepo/releases/latest/download/latest.json"
      ],
